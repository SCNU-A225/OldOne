<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottom_bar_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.chaychan.library.BottomBarItem
            app:itemText="首页"
            app:iconNormal="@drawable/nav_home_normal"
            app:iconSelected="@drawable/nav_home_selected"
            app:textColorNormal="@color/bottom_nav_normal_color"
            app:textColorSelected="@color/bottom_nav_selected_color"
            app:iconHeight="30dp"
            app:iconWidth="30dp"
            app:itemTextSize="12sp"
            app:itemMarginTop="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </com.chaychan.library.BottomBarItem>

        <com.chaychan.library.BottomBarItem
            app:itemText="消息"
            app:iconNormal="@drawable/nav_message_normal"
            app:iconSelected="@drawable/nav_message_selected"
            app:textColorNormal="@color/bottom_nav_normal_color"
            app:textColorSelected="@color/bottom_nav_selected_color"
            app:iconHeight="30dp"
            app:iconWidth="30dp"
            app:itemTextSize="12sp"
            app:itemMarginTop="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </com.chaychan.library.BottomBarItem>

        <com.chaychan.library.BottomBarItem
            app:itemText="个人中心"
            app:iconNormal="@drawable/nav_center_normal"
            app:iconSelected="@drawable/nav_center_selected"
            app:textColorNormal="@color/bottom_nav_normal_color"
            app:textColorSelected="@color/bottom_nav_selected_color"
            app:iconHeight="30dp"
            app:iconWidth="30dp"
            app:itemTextSize="12sp"
            app:itemMarginTop="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </com.chaychan.library.BottomBarItem>

    </com.chaychan.library.BottomBarLayout>
</LinearLayout>