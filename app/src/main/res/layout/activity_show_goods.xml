<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.youth.banner.Banner
            android:id="@+id/showgoods_banner"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="8dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/showgoods_title"
                app:sDividerLineType="both"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:sLeftTextSize="20sp"
                app:sLeftTextString="标题：" />

            <com.allen.library.SuperTextView
                android:id="@+id/showgoods_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sLeftTextSize="18sp"
                app:sLeftTextString="价格：">
            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                android:id="@+id/showgoods_location"
                app:sDividerLineType="both"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:sLeftTextSize="18sp"
                app:sLeftTextString="校区：" />

            <com.allen.library.SuperTextView
                android:id="@+id/showgoods_phone"
                app:sLeftTextSize="18sp"
                app:sLeftIconHeight="20dp"
                app:sLeftIconWidth="20dp"
                app:sLeftIconRes="@drawable/center_menu_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                android:id="@+id/showgoods_email"
                app:sLeftTextSize="18sp"
                app:sLeftIconHeight="30dp"
                app:sLeftIconWidth="30dp"
                app:sLeftIconRes="@drawable/center_menu_email"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                app:sLeftTextSize="18sp"
                app:sLeftTextString="详情："
                app:sDividerLineType="top"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                android:id="@+id/showgoods_content"
                app:sDividerLineType="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sLeftTextSize="16sp"
                app:sLeftTextString="详情内容" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/showgoods_contact"
                android:text="短信联系"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="0dp" />
            <Button
                android:id="@+id/showgoods_share"
                android:text="分享"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_width="0dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
