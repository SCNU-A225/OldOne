<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme"></style>

    <style name="HomeTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/login_activity_text</item>
        <item name="colorControlActivated">@color/login_activity_text</item>
        <item name="colorControlHighlight">@color/login_activity_text</item>
        <item name="colorAccent">@color/login_activity_text</item>
        <item name="android:textColorHint">@color/login_activity_text</item>
    </style>

    <style name="LoginCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#96ffffff</item>
        <item name="colorControlActivated">#96ffffff</item>
    </style>

</resources>
